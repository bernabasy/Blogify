<!DOCTYPE html>
<html>
  <head></head>
  <body>
    <div class='container posts_creen'>
      <div class='postcard'>
        <h2><%= @post.title %> by <%= @author.name %></h2>
        <p class='count'>
          Comments: <%= @post.comments_counter != nil ? @post.comments_counter : '0' %>
          Likes: <%= @post.likes_counter != nil ? @post.likes_counter : '0' %>
        </p>
        <p><%= @post.text %></p>
      </div>
      <% if @comments.length > 0 %>
        <div class='comments_card'>
          <% @comments.each do |comment| %>
            <% user = User.find(comment.author_id)%>
            <p class='comment'><%= user.name %>: <%= comment.text %></p>
          <% end %>
        </div>
      <% end %>
    </div>
  </body>
</html>
